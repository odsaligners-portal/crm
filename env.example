# Server Configuration
PORT=5000                                    # Port number for the Express server

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/crm    # MongoDB connection URI
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/crm

# Authentication
JWT_SECRET=your_jwt_secret_key_here          # Secret key for JWT token generation
JWT_EXPIRE=30d                               # JWT token expiration time

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com                     # SMTP server host
SMTP_PORT=587                                # SMTP server port
SMTP_USER=your-email@gmail.com               # SMTP server username
SMTP_PASSWORD=your-app-specific-password     # SMTP server password

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000    # Backend API URL for frontend

# Optional: For Production
NODE_ENV=development                         # Environment (development/production) 